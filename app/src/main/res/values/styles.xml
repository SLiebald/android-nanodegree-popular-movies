<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="labelStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contentStyle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:padding">4dp</item>
    </style>

    <style name="contentStyleShort" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:padding">4dp</item>
    </style>
</resources>
