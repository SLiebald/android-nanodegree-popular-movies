<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liebald.popularmovies.ui.about.AboutActivity">

    <ImageView
        android:id="@+id/image_tmdb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_tmdb_image_height"
        android:layout_margin="@dimen/about_tmdb_image_margin"
        android:contentDescription="@string/tmdb_logo"
        android:scaleType="centerInside"
        android:src="@drawable/tmdb_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/about_tmdb_text_margin_end"
        android:layout_marginStart="@dimen/about_tmdb_text_margin_start"
        android:layout_marginTop="@dimen/about_tmdb_text_margin_top"
        android:text="@string/tmdb_disclaimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_tmdb" />
</android.support.constraint.ConstraintLayout>
