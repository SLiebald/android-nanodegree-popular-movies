<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_warning_no_internet"
            style="@style/contentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/warning_trailer_reviews_no_internet"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_overview_label"
            style="@style/labelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overview_label" />

        <TextView
            android:id="@+id/tv_overview_text"
            style="@style/contentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_overview_margin_bottom"
            android:layout_marginStart="@dimen/details_overview_margin_start"
            tools:text="Lorum Ipsum etc." />


        <android.support.design.widget.TabLayout
            android:id="@+id/tabs_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed" />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewpager_trailer_reviews_height" />
    </LinearLayout>

</layout>